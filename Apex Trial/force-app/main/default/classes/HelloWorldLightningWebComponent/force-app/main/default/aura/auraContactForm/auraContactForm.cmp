<aura:component controller="ContactController" implements="flexipage:availableForAllPageTypes,force:appHostable">
    <aura:attribute name="firstName" type="String"/>
    <aura:attribute name="lastName" type="String"/>
    <aura:attribute name="email" type="String"/>
    <aura:attribute name="phone" type="String"/>
    <aura:attribute name="fax" type="String"/>
    <aura:attribute name="message" type="String"/>
    <aura:attribute name="savedContact" type="Contact"/>

    <lightning:card title="Create Contact">
        <div class="slds-p-around_medium">
            <lightning:input label="First Name" value="{!v.firstName}" />
            <lightning:input label="Last Name" value="{!v.lastName}" required="true"/>
            <lightning:input label="Email" value="{!v.email}" type="email"/>
            <lightning:input label="Phone" value="{!v.phone}" type="tel"/>
            <lightning:input label="Fax" value="{!v.fax}" type="tel"/>
            <br/>
            <lightning:button label="Save Contact" onclick="{!c.saveContact}" variant="brand" class="slds-m-top_medium"/>

            <aura:if isTrue="{!not(empty(v.message))}">
                <p class="slds-m-top_medium">{!v.message}</p>
            </aura:if>
        </div>

        <aura:if isTrue="{!not(empty(v.savedContact.Id))}">
            <div class="slds-box slds-theme_alert-texture slds-m-top_medium">
                <p><strong>Contact Saved:</strong></p>
                <p>Name: {!v.savedContact.FirstName} {!v.savedContact.LastName}</p>
                <p>Email: {!v.savedContact.Email}</p>
                <p>Phone: {!v.savedContact.Phone}</p>
                <p>Fax: {!v.savedContact.Fax}</p>
            </div>
        </aura:if>
    </lightning:card>
</aura:component>